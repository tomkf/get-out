<%= form_tag(posts_path) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search' %>
<% end %>



<h1>Featured items: </h1>

 <% featured_list = @posts.last(5) %>

<div class="card-container">
  <% featured_list.each do |item| %>
    <div class="featured-card">
      <img src=<%= item.photos[0].source %> >
      <div class="">
        <p> <%= item.title %> </p>
        <p> from $<%= item.price %> a day <p>
      </div>
    </div>
  <% end %>
</div>


