<%= render 'shared/navbar_search' %>
<div class="main-container">

  <div class="cards">
    <% @result.each do |post| %>
      <%= link_to post_path(post.id), class: "card-search", style: "background-image: url(#{post.photos.first.source.url})", method: :get do%>
          <h4> <%= post.title.capitalize %> </h4>
      <% end %>
    <% end %>
  </div>

    <div
    id="map"
    style="width: 40%;
    height: 90vh;
    position: sticky;
    top: 0;
    margin: 0 0 0 16px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  class="ml-3"></div>

</div>
</div>
